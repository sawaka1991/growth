<div class="item_edit_form">
	<%= form_for(item) do |f| %>
		<div class="form-group">
			<lebel for="image">image:</lebel>
			<%= f.attachment_field :item_images_images, multiple: true, id:"image" %>
		</div>
		<div class="form-group">
			<label for="type">分類：</label>
			<%= f.select :type,Item.types.keys, id:"type" %>
		</div>

		<div class="form-group">
			<label for="item_name">商品名：</label>
			<%= f.text_field :item_name, class:"form-control", id:"item_name" %>
		</div>
		<div class="form-group">
			<label for="introduction">説明：</label>
			<%= f.text_area :introduction, class:"form-control", id:"introduction" %>
		</div>
		<%= f.submit "edit", class: "edit pull-right" %>
	<% end %>
</div>